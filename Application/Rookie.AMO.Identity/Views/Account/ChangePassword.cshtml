@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Rookie.AMO.Identity.ViewModel.ChangeInputModel
<div class="login-page">
    <div class="row login">
<form class="form-login" method="post" asp-route="Change">
    <div class="row">
        <div class="col">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <hr />

    <input type="hidden" asp-for="ReturnUrl" />

    <div class="header_mjz">
        <div id="Welcome_to_Online_Asset_Manage">
            <span>Change Password</span>
        </div>
    </div>
    <div class="background_mj" viewBox="0 0 465.648 228.959">
        <div class="input-field">
            <span>Old Password </span><span class="note">*</span>
            <input id="password" class="input-login" type="password" asp-for="CurrentPass" />

            <i id="togglePassword" class="fas fa-eye show-password"></i>
        </div>
        <div class="input-field">
            <span>New Password </span><span class="note">*</span>
            <input id="newpassword" class="input-login" type="password" asp-for="NewPass" />
            <i id="togglenewPassword" class="fas fa-eye show-password"></i>


        </div>
        <div class="input-field">
            <span>Current Password </span><span class="note">*</span>
            <input id="currentpassword" class="input-login" type="password" asp-for="ConfirmPass" />
            <i id="togglenewPassword" class="fas fa-eye show-password"></i>

        </div>
        <div class="input-field">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>
</div>
</div>

